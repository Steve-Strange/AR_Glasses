<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ar_glasses.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_photos"
        android:name="com.example.ar_glasses.ui.photos.PhotosFragment"
        android:label="Photos"
        tools:layout="@layout/fragment_photos" />

    <fragment
        android:id="@+id/navigation_ai"
        android:name="com.example.ar_glasses.ui.ai.AiFragment"
        android:label="AI"
        tools:layout="@layout/fragment_ai" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.ar_glasses.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
